{
  "log": {
    "level": "info"
  },
  "dns": {
    "servers": [
      {
        "address": "tls://{{ dns_ip }}"
      }
    ]
  },
  "inbounds": [
  {% if trojan.enabled %}
    {
      "type": "trojan",
      "tag": "trojan-in",
      "listen": "::",
      "listen_port": {{ trojan.port }},
      "users": [
      {% for user in users %}
      {
        "name": "{{ user.name }}",
        "password": "{{ user.password }}"
      } {{ ',' if not loop.last else '' }}
      {% endfor %}
      ],
      "tls": {}
    }
  {% endif %}
  {{ ',' if trojan.enabled and xray.enabled else '' }}
  {% if xray.enabled %}
    {
      "type": "vless",
      "listen": "::",
      "listen_port": {{ xray.port }},
      "users": [
      {% for user in users %}
      {
        "name": "{{ user.name }}",
        "uuid": "{{ user.password }}",
	"flow": "xtls-rprx-vision"
      } {{ ',' if not loop.last else '' }}
      {% endfor %}
      ],
      "tls": {
        "enabled": true,
        "reality": {
          "enabled": true,
          "handshake": {
            "server": "{{ reality.server }}",
            "server_port": {{ reality.port }}
          },
          "private_key": "{{ reality_privkey }}",
          "short_id": ["{{ reality_short_id }}"],
          "max_time_difference": "1m"
        }
      }
    }
  {% endif %}
  ],
  "outbounds": [
    {
      "type": "direct"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "route": {
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      }
    ]
  }
}
